---
const {post: {title, description, content, imgPath, created_at, id}} = Astro.props;
---

<div class="bg-gradient-to-t from-rose-950/90 to-gray-700/70 text-white max-w-sm rounded overflow-hidden px-5 py-6 shadow-lg hover:shadow-xl hover:border-gray-200">
 <a href={`/posts/${id}`} class="group hover:no-underline focus:no-underline">
    <img 
        class="object-cover w-full rounded h-44 dark:bg-gray-500" 
        src={imgPath} 
        alt="Sunset in the mountains"
    >
    <div class="pt-4 ">
        <p class="text-xs text-white/90 dark:text-gray-600 mb-4">
            {new Date(created_at).toLocaleDateString()}  - 16 min read
          </p>
      <div class="font-bold text-xl mb-4 group-hover:underline py-2 rounded">
        {title}
      </div>
      <p class="text-base font-semibold mb-2">
        {description}
      </p>
      <p class="text-white/95 flex justify-end mt-2 text-sm/relaxed">
        {content.slice(0,100) + '...' } 
      </p>
    </div>
 </a>
</div>



